<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.assignment02_.controller.MainController">
    <children>
        <HBox spacing="10" alignment="center">
            <ComboBox fx:id="genreComboBox" promptText="Select Genre" />
            <ComboBox fx:id="yearComboBox" promptText="Select Year" />
            <Button text="Search" onAction="#onSearchMovies" />
        </HBox>
        <ListView fx:id="movieListView" />
        <Label fx:id="averageRatingLabel" />
    </children>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</VBox>
